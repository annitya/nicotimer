<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="flageolett.nicotimer.MainActivity" tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button android:onClick="startTimer" android:text="@string/main_button_start" android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/button" app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintRight_toLeftOf="@+id/button2" tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp" android:layout_marginEnd="8dp" tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button android:onClick="stopTimer" android:text="@string/main_button_stop" android:layout_width="180dp" android:layout_height="wrap_content" android:id="@+id/button2"
        tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginBottom="16dp"
    />

    <TextView android:text="@string/main_t_status" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/textView_status" tools:layout_constraintTop_creator="1" android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView_status_text"
        tools:layout_constraintTop_creator="1" android:layout_marginStart="17dp" android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView_status"
    />
    <TextView android:text="@string/main_t_target" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/textView" tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView_status" tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView_status" android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp" />
    <EditText android:textSize="15sp" android:layout_width="43dp" android:layout_height="40dp" android:inputType="text"
        android:text="@string/main_ti_target" android:ems="10" android:id="@+id/editText_target" tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView_status_text" tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView_status_text" android:layout_marginLeft="18dp"
        android:layout_marginTop="0dp" />
    <TextView android:text="@string/main_t_unit" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView_unit" tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView_status" tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView_status" android:layout_marginTop="40dp"
        android:layout_marginLeft="0dp"
    />
    <EditText android:textSize="15sp" android:layout_width="43dp" android:layout_height="40dp" android:inputType="text"
        android:text="@string/main_ti_unit" android:ems="10" android:id="@+id/editText_unit"
        tools:layout_constraintTop_creator="1" app:layout_constraintTop_toBottomOf="@+id/textView_status_text"
        tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="@+id/textView_status_text"
        android:layout_marginLeft="18dp" android:layout_marginTop="27dp"
    />
    <TextView android:text="@string/main_t_accepted" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView_accepted" tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView_status" tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView_status" android:layout_marginTop="67dp"
        android:layout_marginLeft="0dp"
    />
    <EditText android:textSize="15sp" android:layout_width="43dp" android:layout_height="40dp" android:inputType="text"
        android:text="@string/main_ti_accepted" android:ems="10" android:id="@+id/editText_accepted"
        tools:layout_constraintTop_creator="1" app:layout_constraintTop_toBottomOf="@+id/textView_status_text"
        tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="@+id/textView_status_text"
        android:layout_marginLeft="18dp" android:layout_marginTop="58dp"
    />

</android.support.constraint.ConstraintLayout>
